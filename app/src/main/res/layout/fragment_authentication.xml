<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".fragment.loginFragment.AuthenticationFragment">


<ImageView
    android:id="@+id/icon"
    android:layout_width="216dp"
    android:layout_height="@dimen/measure_86dp"
    android:src="@drawable/splash_background"
    android:layout_marginTop="@dimen/measure_108dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<Button
    android:id="@+id/register_button"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/measure_56dp"
    android:layout_marginTop="@dimen/measure_108dp"
    android:padding="@dimen/measure_20dp"
    android:text="@string/register"
    app:layout_constraintTop_toBottomOf="@+id/icon"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<Button
    android:id="@+id/login_button"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/measure_56dp"
    android:layout_marginTop="@dimen/measure_20dp"
    android:padding="@dimen/measure_20dp"
    android:text="@string/login"
    app:layout_constraintTop_toBottomOf="@+id/register_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>